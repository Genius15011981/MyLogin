<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="91dp"
        android:src="@drawable/back_arr"
        />

    <TextView
        android:id="@+id/s_up"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:layout_marginTop="91dp"
        android:layout_marginStart="169dp"
        android:fontFamily="sans-serif"
        android:text="@string/sign_up"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="257dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="sans-serif"
        android:text="@string/create_apass"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="136dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="177dp"
        android:autofillHints="golibjonodinaev@gmail.com"
        android:textColor="#CFCFCF"
        android:hint="@string/pass_text"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColorHighlight="#CFCFCF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/reg_step"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginStart="322dp"
        android:layout_marginTop="355dp"
        android:fontFamily="@string/sans_serif"
        android:text="@string/_2_of_3"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/p_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="222dp"
        android:checked="true"
        android:text="@string/show_pass"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/p_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="327dp"
        android:layout_height="8dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="378dp"
        android:layout_marginStart="32dp"
        android:background="#07DDC9"
        android:backgroundTint="#FFFFFF"
        android:max="100"
        android:progress="66"
        android:progressTint="#4CAF50" />

    <Button
        android:id="@+id/button"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="415dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#41C485"
        android:textColor="@color/white"
        android:text="@string/btn_next"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="207dp"
        android:text="@string/privace"
        android:textAlignment="center"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</FrameLayout>