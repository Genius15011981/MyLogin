<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/back"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="91dp"
        android:onClick="onBackPressed"
        android:contentDescription="@string/back_arrow"
        android:src="@drawable/back_arr" />
    <TextView
        android:id="@+id/s_up"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="91dp"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold" />

    <TextView
        android:layout_width="256dp"
        android:layout_height="34dp"
        android:layout_marginTop="151dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:text="@string/verify_otp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="327dp"
        android:layout_height="18dp"
        android:layout_marginTop="191dp"
        android:layout_marginStart="39dp"
        android:ellipsize="middle"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="#CFCFCF"
        android:textSize="16sp"
        tools:ignore="LabelFor,TextViewEdits"/>
    <EditText
        android:id="@+id/otpone"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="245dp"
        android:ellipsize="middle"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="@color/blcolor"
        android:textSize="16sp"
        tools:ignore="LabelFor"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/otptwo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="245dp"
        android:ellipsize="middle"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="@color/blcolor"
        android:textSize="16sp"
        tools:ignore="LabelFor"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/otpthree"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="245dp"
        android:ellipsize="middle"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="@color/blcolor"
        android:textSize="16sp"
        tools:ignore="LabelFor"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/otpfour"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="283dp"
        android:layout_marginTop="245dp"
        android:ellipsize="middle"
        android:importantForAutofill="no"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="@color/blcolor"
        android:textSize="16sp"
        tools:ignore="LabelFor" />
    <TextView
        android:id="@+id/reotp"
        android:layout_width="327dp"
        android:layout_height="18dp"
        android:layout_marginTop="334dp"
        android:layout_marginStart="39dp"
        android:textSize="12sp"
        android:text="@string/didn_t"
        android:textColor="@color/grey"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/resend"
        android:layout_width="327dp"
        android:layout_height="18dp"
        android:layout_marginTop="352dp"
        android:layout_marginStart="39dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#41C485"
        android:text="@string/resend_code"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/reg_step"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="417dp"
        android:fontFamily="sans-serif"
        android:textSize="13sp"
        android:text="@string/_3_of_3"
        />


    <ProgressBar
        android:id="@+id/p_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="327dp"
        android:layout_height="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="449dp"
        android:background="#CFCFCF"
        android:backgroundTint="#FFFFFF"
        android:progressTint="#4CAF50"
        android:max="100"
        android:progress="100"/>
    <Button
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="477dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#41C485"
        android:onClick="onClick"
        android:text="@string/verify"
        android:textStyle="bold" />


</FrameLayout>