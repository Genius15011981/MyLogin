<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="59dp"
        android:layout_height="24dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="111dp"
        android:lineHeight="24.2dp"
        android:text="@string/log_in"
        android:textAlignment="center"
        android:textColor="#14304A"
        android:textFontWeight="600"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvo"
        android:layout_width="139dp"
        android:layout_height="33dp"
        android:layout_marginTop="143dp"
        android:layout_marginStart="129dp"
        android:text="@string/hi_wellcome"
        android:textFontWeight="400"
        android:textAlignment="center"
        android:textSize="22sp"
        android:lineHeight="33dp"
        android:letterSpacing="0.05"
        android:textColor="#C4C4C4"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="273dp"
        android:layout_marginStart="37dp"
        android:hint="@string/email_address">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ent_email"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:text="@string/enter_your_email"
            android:textColor="#C4C4C4"
            android:onClick="sttext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="349dp"
        android:layout_marginStart="37dp"
        android:hint="@string/user_pass">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/outlined_edit_text"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:inputType="textWebPassword"
            android:text="@string/enter_pass"
            android:textColor="#CFCFCF" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/log_btn"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="437dp"
        android:layout_marginStart="29dp"
        android:onClick="onClick"
        android:text="@string/log_btn_txt"
        android:textColor="#ffffff"
        android:backgroundTint="#41C485"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login"
        android:layout_width="327dp"
        android:layout_height="16sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="514dp"
        android:text="@string/forg_pass"
        android:textAlignment="center" />
    <TextView
        android:layout_width="313.5dp"
        android:layout_height="18sp"
        android:layout_marginTop="545dp"
        android:layout_marginStart="33.5dp"
        android:text="@string/sign_with"
        android:textFontWeight="400"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="#C4C4C4"/>
    <TableLayout
        android:id="@+id/tbl"
        android:layout_marginTop="635dp"
        android:layout_marginStart="61dp"
        android:layout_width="263dp"
        android:layout_height="82dp"
        android:orientation="horizontal">
        <TableRow tools:ignore="UselessParent">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/btn_apple"
                android:src="@drawable/apple"
                android:scaleType="fitStart">
            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/btn_google"
                android:src="@drawable/google"
                android:scaleType="fitStart">
            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/facebook"
                android:src="@drawable/facebook"
                android:scaleType="fitStart">
            </com.google.android.material.imageview.ShapeableImageView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/new_acc"
        android:layout_width="148dp"
        android:layout_height="18sp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="742dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/h_acc"
        android:textAlignment="center"
        android:textColor="#C4C4C4"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:lineHeight="18dp"
        android:letterSpacing="0.05"
        android:textColorHighlight="#C4C4C4"/>

    <TextView
        android:id="@+id/creatac"
        android:layout_width="117dp"
        android:layout_height="18sp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="760dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:lineHeight="18dp"
        android:text="@string/cr_acc"
        android:textAlignment="center"
        android:textColorHighlight="#C4C4C4"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

</FrameLayout>